
img {
	display: block;
	width: 100%;
	height: 100%;
}

div {
	box-sizing: border-box;
	// overflow: hidden;
}

.normal-theme-btn {
	height: 90px;
	line-height: 90px;
	color: $color-white;
	background: $linear-gradient-button-theme;
	text-align: center;
	border-radius: 8px;
	font-size: $font-15;
}

.normal-theme-btn-radius {
	height: 90px;
	line-height: 90px;
	color: $color-white;
	background: $linear-gradient-button-theme;
	text-align: center;
	border-radius: 45px;
	font-size: $font-15;
}

.normal-theme-bg {
	background: $linear-gradient-bg-theme;
}

.input-placeholder-style {
	font-size: $font-14;
	color: $color-text-lightgray;
}
